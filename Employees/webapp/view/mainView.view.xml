<mvc:View xmlns:table="sap.ui.table"   controllerName="logaligroup.Employees.controller.mainView"
            xmlns:mvc="sap.ui.core.mvc"
            displayBlock="true"
            xmlns="sap.m"
            xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <HBox>
                            <Label id="labelEmployee" labelFor="imputEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin"/>
                            <Input id="inputEmployee" value="{jsonCountries>/EmployeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd"/>
                            <Label id="labelCountry" labelFor="slCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" visible="true"/>
                            <Select id="slCountry" selectedKey="{jsonCountries>/CountryKey}" forceSelection="false" items="{jsonCountries>/ListCountry}" visible="true">
                                <items>
                                    <core:Item key="{jsonCountries>Key}" text="{jsonCountries>Text}"/>
                                    <!--core:Item key="VE" text="{i18n>countryVE}"/>
                                    <core:Item key="CL" text="{i18n>countryCL}"/>
                                    <core:Item key="US" text="{i18n>countryUS}"/-->
                                </items>
                            </Select>
                            <Button id="btnFilter" text="{i18n>bntFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"/>
                            <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>
                        </HBox>
                        <HBox >
                            <Panel>
                                <Button id="btnShowCity" text="{i18n>showCity}" visible="{oJSONModelConfig>/visibleBtnShowCity}" press="onShowCity"/>
                                <Button id="btnHideCity" text="{i18n>hideCity}" visible="{oJSONModelConfig>/visibleBtnHideCity}" press="onHideCity"/>
                                <Table id="tableEmployee" items="{jsonEmployees>/Employees}">
                                    <columns>
                                        <Column visible="{oJSONModelConfig>/visibleID}">
                                            <header>
                                                <Label text="{i18n>tableId}"/>
                                            </header>
                                        </Column>
                                        <Column visible="{oJSONModelConfig>/visibleName}">
                                            <header>
                                                <Label text="{i18n>tableName}"/>
                                            </header>
                                        </Column>
                                        <Column visible="{oJSONModelConfig>/visibleCountry}">
                                            <header>
                                                <Label text="{i18n>tableCoutry}"/>
                                            </header>
                                        </Column>
                                        <Column visible="{oJSONModelConfig>/visibleCity}">
                                            <header>
                                                <Label text="{i18n>tableCity}"/>
                                            </header>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem type="Active" press="showPostalCode">
                                            <cells>
                                                <Label text="{jsonEmployees>EmployeeID}"/>
                                                <Label text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}"/>
                                                <Label text="{jsonEmployees>Country}"/>
                                                <Label text="{jsonEmployees>City}"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
